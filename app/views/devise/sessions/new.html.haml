-# frozen_string_literal: true
%h2= t('.sign_in')
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: 'email', placeholder: true }
    = f.input :password,
      required: false,
      input_html: { autocomplete: 'current-password', placeholder: true }
    = f.input :remember_me, as: :hidden if devise_mapping.rememberable?
  .form-actions
    = render 'shared/actions', form: f, submit: t('.sign_in')
= render 'devise/shared/links'
