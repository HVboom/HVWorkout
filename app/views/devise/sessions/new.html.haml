%h2 Log in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: 'email', placeholder: true }
    = f.input :password,
      required: true,
      input_html: { autocomplete: 'current-password', placeholder: true }
    = f.input :remember_me, as: :hidden, value: true if devise_mapping.rememberable?
  .form-actions
    = render 'shared/actions', form: f, submit: 'Log in', back: false
= render 'devise/shared/links'
